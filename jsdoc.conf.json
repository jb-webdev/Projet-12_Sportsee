{
    "tags": {
      "allowUnknownTags": true,
      "dictionaries": ["jsdoc", "closure"]
    },
    "source": {
      "include": ["src"],
      "includePattern": ".+\\.js(doc|x)?$",
      "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown", "better-docs/component"],
    "templates": {
      "cleverLinks": true,
      "monospaceLinks": true,
      "better-docs": {
        "name": "My React components"
      }
    },
    "opts": {
      "destination": "./docs/",
      "recurse": true,
      "readme": "README.md"
    }
  }